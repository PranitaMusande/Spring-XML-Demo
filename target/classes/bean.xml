<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Alia" />
        <constructor-arg name="gender" value="female" />
        <constructor-arg name="age" value="20" />
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Varun" />
        <constructor-arg name="gender" value="male" />
        <constructor-arg name="age" value="20" />
    </bean>


    <bean id="movie1" class="com.stackroute.domain.Movie">
        <constructor-arg name="name" value="ABCD"/>
        <constructor-arg name="actor" ref="actor1" />
    </bean>


    <bean id="movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="name" value="SOTY2"/>
        <constructor-arg name="actor" ref="actor2" />
    </bean>

</beans>